<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/login_logo_padding_bottom" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/login_padding_left_right"
        android:paddingRight="@dimen/login_padding_left_right"
        android:orientation="horizontal" 
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin">
        
        <TextView 
            android:id="@+id/txt_sign_up"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/login_font_size"
	        android:text="@string/sign_up_link"/>
        
        <TextView 
            android:id="@+id/txt_link_sign_in"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/login_text_size"
	        android:text="@string/sign_in_txt" 
	        android:layout_alignParentRight="true"
	        android:textColor="@color/sign_in_textcolor_darkblue"
	        android:clickable="true"
			android:onClick="SwithToSignIn"/>
   </RelativeLayout>
   
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/login_padding_left_right"
        android:paddingRight="@dimen/login_padding_left_right"
        android:paddingBottom="10dp" >
       
        <EditText
            android:id="@+id/enterUsername"
            style="@style/loginDialog"
            android:layout_height="@dimen/login_edittext_height"
   			android:layout_width="@dimen/login_edittext_width"
   			android:hint="Email" />
        <requestFocus />
        
        <EditText
            android:id="@+id/enterPassword"
            style="@style/loginDialog"
            android:layout_height="@dimen/login_edittext_height"
   			android:layout_width="@dimen/login_edittext_width"
            android:maxLines="1"
            android:hint="Password"
            android:password="true" />
        
         <EditText
            android:id="@+id/confirmPassword"
            style="@style/loginDialog"
            android:layout_height="@dimen/login_edittext_height"
   			android:layout_width="@dimen/login_edittext_width"
            android:maxLines="1"
            android:hint="Re-enter password"
            android:password="true" />

	</LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/login_padding_left_right"
        android:paddingRight="@dimen/login_padding_left_right"
        android:layout_marginBottom="@dimen/activity_vertical_margin">
        
        <CheckBox 
	        android:id="@+id/cb_agree_terms"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/login_text_size"
	        android:text="@string/agree_terms"
	        android:onClick="onCheckboxClicked"/>
	 </RelativeLayout>
	 
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/login_padding_left_right"
        android:paddingRight="@dimen/login_padding_left_right" >
        
        <Button
            android:id="@+id/sign_in"
            android:layout_width="@dimen/signup_btn_width"
            android:layout_height="@dimen/login_edittext_height"
            android:layout_alignParentRight="true"
            android:background="@color/login_btn_blue"
            android:text="@string/create_account"
            android:textColor="@color/sign_in_textcolor_darkblue"
            android:textStyle="bold" />

    </RelativeLayout>


</LinearLayout>