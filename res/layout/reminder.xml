<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id = "@+id/reminder_item"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bolder"
        android:orientation="vertical" >

        <Button
            android:id="@+id/content1"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@color/light_grey"
            android:onClick="ButtonOnClick"
            android:text=" Reminder : "
            android:textColor="@color/light_black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/content1"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Health is the level of functional or metabolic efficiency of a living organism."
            android:textColor="@color/grey"
            android:textSize="18dp" />
   
    </LinearLayout>
    
          
     
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bolder"
        android:orientation="vertical" >

        <Button
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@color/light_grey"
            android:clickable="true"
            android:gravity="left"
            android:onClick="toggle_recom_box"
            android:text=" Reminder : "
            android:textColor="@color/light_black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/rd_content"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Health is the level of functional or metabolic efficiency of a living organism."
            android:textColor="@color/grey"
            android:textSize="18dp" />
    </LinearLayout>

</LinearLayout>